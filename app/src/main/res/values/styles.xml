<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">

        <item name="android:windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="CustomButton">
        <item name="android:textColor">@color/gray_buttons_text_color</item>
        <item name="android:textSize">@dimen/btn_text_size</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="android:soundEffectsEnabled">false</item>

    </style>

    <style name="CustomButton.DIGIT" parent="CustomButton">


        <item name="android:background">@drawable/selector_for_btn_dialpad</item>

    </style>

    <style name="CustomButton.RETRO" parent="CustomButton">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomButton.RETRO.grey" parent="CustomButton.RETRO">
        <item name="android:background">@drawable/selector_for_btn_grey</item>
    </style>


 <style name="CustomButton.RETRO.clear" parent="CustomButton.RETRO">
        <item name="android:background">@drawable/selector_for_btn_c</item>
    </style>
    <style name="CustomButton.RETRO.clear.land" parent="CustomButton.RETRO.clear">
        <item name="android:background">@drawable/selector_for_btn_c</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>


 <style name="CustomButton.RETRO.black" parent="CustomButton.RETRO">
        <item name="android:background">@drawable/selector_for_btn_black</item>
    </style>



    <style name="CustomButton.RETRO.grey.scientific" parent="CustomButton.RETRO.grey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>

    </style> <style name="CustomButton.RETRO.black.scientific" parent="CustomButton.RETRO.black">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

 <style name="CustomButton.RETRO.equally" parent="CustomButton.RETRO">
        <item name="android:background">@drawable/selector_for_btn_equally</item>
    </style>


    <style name="CustomButton.RETRO.equally.land" parent="CustomButton.RETRO.equally">
        <item name="android:background">@drawable/selector_for_btn_equally</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="CustomButton.SCIENTIFIC" parent="CustomButton">

        <item name="android:textSize">@dimen/btn_scientific_text_size</item>

        <item name="android:background">@drawable/selector_for_btn_dialpad</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="CustomButton.ripple" parent="CustomButton">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>



    <style name="CustomButton.TABLET" parent="CustomButton">

        <item name="android:background">@drawable/selector_for_btn_dialpad</item>


    </style>


    <style name="DIALPADBUTTON.LAND_NORMAL." parent="CustomButton">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_land_btn_text_size</item>
        <item name="android:background">@drawable/selector_for_btn_dialpad</item>

    </style>


    <style name="DIALPADBUTTON.LAND_NORMAL.DIGIT" parent="DIALPADBUTTON.LAND_NORMAL.">
        <item name="android:layout_marginRight">@dimen/padding_small</item>
        <item name="android:layout_marginLeft">@dimen/padding_small</item>



    </style>



    <style name="scientific_button_port" parent="CustomButton">
        <item name="android:textSize">@dimen/scientific_button_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/selector_for_btn_dialpad</item>

    </style>



    <style name="scientific_button_land_phone" parent="CustomButton">
        <item name="android:textSize">@dimen/scientific_button_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="scientific_button_land" parent="CustomButton">
        <item name="android:textSize">@dimen/scientific_button_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="CustomButton.icon_button." parent="CustomButton">
        <item name="android:textSize">@dimen/icon_button_size</item>
        <item name="android:background">@android:color/transparent</item>
    </style>




    <style name="icon_button.portrait" parent="scientific_button_port">
        <item name="android:textSize">@dimen/icon_button_size</item>
    </style>







    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="Divider">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/dividerHeight</item>
        <item name="android:background">?android:attr/dividerHorizontal</item>

    </style>


    <style name="Theme.AlertDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#659F26</item>


        <item name="android:windowTitleStyle">@style/Theme.AlertDialog</item>
    </style>

    <style name="TopSection">
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="translation_box">
        <item name="android:textSize">@dimen/translation_text_size</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:textIsSelectable">true</item>

        <item name="android:background">@android:color/white</item>

    </style>

    <style name="viewpager" >

        <item name="android:layout_marginRight">@dimen/viewpager_margin_sideways</item>
        <item name="android:layout_marginLeft">@dimen/viewpager_margin_sideways</item>


    </style>

    <style name="text_switcher">
        <item name="android:cursorVisible">false</item>
        <item name="android:textIsSelectable">true</item>

        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
        <item name="android:maxLines">4</item>


        <item name="android:textSize">@dimen/result_text_size</item>
    </style>

    <style name="list_view_Log">
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="FixedTextViewStyle" parent="android:Widget.TextView">
        <!-- Override the textColor attribute explicitly to avoid unexpected text color issue on HTC devices -->
        <item name="android:textColor">@color/abc_primary_text_material_light</item>
    </style>

    <style name="myRecyclerViewStyle">
        <!-- NOTE: clipChildren should be true on API level 10 -->
        <item name="android:clipChildren">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="exampleLauncherButtonStyle">
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="commonListItemStyle">
    </style>

    <style name="sectionHeaderItemStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />



</resources>
