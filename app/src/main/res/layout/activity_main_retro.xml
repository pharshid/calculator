<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_normal"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/activity_body"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="35"
        android:id="@+id/MotherTop">




        <LinearLayout
            android:id="@+id/Top"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1.22"
            android:background="@drawable/display_normal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/scientific_mode_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/black"
                    android:paddingLeft="@dimen/padding_small"
                    android:text="RAD"
                    />

                <TextView
                    android:id="@+id/m_vaiable_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/scientific_mode_textview"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/black"
                    android:paddingLeft="@dimen/padding_small"
                    android:text=" M = 0"
                    android:inputType="textMultiLine|textNoSuggestions"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="horizontal"
                    >


                    <ImageButton
                        android:id="@+id/add_to_favorites"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:textColor="@android:color/white"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/favourite4"
                        android:background="@android:color/transparent"
                        />

                    <ImageButton
                        android:id="@+id/favorites_list"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/favorite_list"
                        />

                    <EditText
                        android:id="@+id/tag_himself"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:backgroundTint="@android:color/holo_green_light"
                        android:inputType="text"
                        android:layout_weight="1"
                        />


                </LinearLayout>


            </LinearLayout>






            <com.sepidsa.calculator.AutoResizeTextView
                android:id="@+id/translationEditText"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="35"
                android:textColor="@android:color/black"
                android:paddingTop="4dp"
                android:gravity="right|center_vertical"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:textSize="30sp"
                android:paddingRight="@dimen/padding_large"
                android:scrollbars = "vertical"
                android:background="@android:color/transparent"

                />

            <View android:layout_height="2dp"
                android:layout_width="match_parent"

                android:background="?android:attr/listDivider"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="32"

                >
                <com.sepidsa.calculator.AutoResizeTextView
                    android:id="@+id/result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textIsSelectable="true"
                    android:background="@null"
                    android:focusable="false"
                    style="@style/text_switcher"
                    android:text="0"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/padding_large"
                    android:textColor="@android:color/black"
                    android:scrollbars = "vertical"
                    android:singleLine="false"
                    />


            </LinearLayout>




        </LinearLayout>

    </LinearLayout>






    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/MotherTop"
        android:layout_weight="65"
        android:orientation="vertical">

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/view_pager_indicator"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:paddingTop="2dp"


            />
        <android.support.v4.view.ViewPager
            android:id="@+id/portrait_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="95"
            style="@style/viewpager"
            android:tag="portrait_phone"

            >
        </android.support.v4.view.ViewPager>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:background="@android:color/transparent"

            >

            <Button
                android:id="@+id/buttonSettings"
                style="@style/icon_button.portrait"
                android:layout_weight="1"
                android:text="@string/settings"
                android:tag="feedback"
                android:gravity="center_horizontal"


                android:textColor="#DADFE1"

                />

            <Button
                android:id="@+id/buttonLanguage"
                android:layout_weight="1"
                android:text="@string/language"
                android:tag="@string/language"
                android:gravity="center_horizontal"
                style="@style/icon_button.portrait"
                android:textColor="#DADFE1"

                />



            <Button
                android:id="@+id/buttonMute"
                style="@style/icon_button.portrait"
                android:layout_weight="1"
                android:text="@string/volume_high"
                android:tag="@string/volume_high"
                android:gravity="center_horizontal"
                android:textColor="#DADFE1"


                />

            <Button
                android:id="@+id/buttonColors"
                style="@style/icon_button.portrait"
                android:layout_weight="1"
                android:text="q"
                android:textColor="#DADFE1"
                android:tag="q"
                android:gravity="center_horizontal"

                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
