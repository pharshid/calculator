<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayoutScientificCalc"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
>

    <LinearLayout
        android:id="@+id/FirstRowScientific"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonConstant"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/constant"
            android:tag="@string/constant"
            android:background="@android:color/transparent"
            style="?android:attr/borderlessButtonStyle"
            />


        <ToggleButton
            android:id="@+id/buttonInverse"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/inverse"
            android:text="@string/inverse"
            android:tag="@string/inverse"
            android:textOn="INV"
            android:textOff="INV"
             android:background="@android:color/transparent"
            style="?android:attr/borderlessButtonStyle"
            />



        <ToggleButton
            android:id="@+id/buttonARC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/ARC"
            android:textOff="@string/ARC"
            android:textOn="@string/ARC"
            android:tag="@string/ARC"
            android:background="@android:color/transparent"
            style="?android:attr/borderlessButtonStyle"
            />




            <ToggleButton



                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/switch_deg_rad"
                android:layout_centerInParent="true"
                android:textOff="RAD"
                android:textOn="DEG"
                android:checked="true"
                android:background="@android:color/transparent"
                style="?android:attr/borderlessButtonStyle"
                />



    </LinearLayout>


    <View android:layout_height="2dp"
        android:layout_width="match_parent"

        android:background="?android:attr/listDivider"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>


    <LinearLayout
        android:id="@+id/SecondRowScientific"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center" >





        <Button
            android:id="@+id/buttonrad"
            style="@style/CustomButton.SCIENTIFIC"
            android:layout_weight="1"
            android:text="@string/sqrt"
            android:tag="@string/sqrt"
            />


        <Button
            android:id="@+id/buttonpower"
            style="@style/CustomButton.SCIENTIFIC"
            android:layout_weight="1"
            android:tag="@string/power"
            android:text="@string/power"
            />

        <Button
            android:id="@+id/buttonPow2"
            style="@style/CustomButton.SCIENTIFIC"
            android:layout_weight="1"
            android:text="@string/powertwo"
            android:tag="@string/powertwoTag"

            />


        <Button
            android:id="@+id/buttonPow3"
            style="@style/CustomButton.SCIENTIFIC"
            android:layout_weight="1"
            android:text="@string/powerthree"
            android:tag="@string/powerthreeTag"

            />




        <!--<Button-->
        <!--android:id="@+id/buttonFactoriel"-->
        <!--style="@style/scientific_button_port"-->
        <!--android:layout_weight="1"-->
        <!--android:text="@string/not"-->
        <!--android:tag="!"-->
        <!--/>-->


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ThirdRowScientific"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">


        <Button
            android:id="@+id/buttone"
            style="@style/CustomButton.SCIENTIFIC"
            android:layout_weight="1"
            android:text="@string/e"
            android:tag="@string/e"
            />

        <Button
            style="@style/CustomButton.SCIENTIFIC"
            android:id="@+id/buttonfact"

            android:layout_weight="1"
            android:text="@string/factoriel"
            android:tag="@string/factoriel"
            />


        <Button
            android:id="@+id/buttonpie"
            style="@style/CustomButton.SCIENTIFIC"
            android:layout_weight="1"
            android:tag="@string/Pi"
            android:text="@string/Pi"

            />



        <Button
            style="@style/CustomButton.SCIENTIFIC"
            android:id="@+id/buttonRandom"

            android:layout_weight="1"
            android:text="@string/random"
            android:tag="@string/random"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/someRowScientific"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonSinus"
            style="@style/CustomButton.SCIENTIFIC"
            android:layout_weight="1"
            android:hint="@string/sin"
            android:text="@string/sin"
            android:tag="@string/trigonomic"
            />


        <Button
            android:id="@+id/buttonCosinus"
            style="@style/CustomButton.SCIENTIFIC"
            android:layout_weight="1"
            android:text="@string/cos"
            android:tag="@string/trigonomic"
            />

        <Button
            android:id="@+id/buttonTan"
            style="@style/CustomButton.SCIENTIFIC"
            android:layout_weight="1"
            android:text="@string/tan"
            android:tag="@string/trigonomic"
            />


        <Button
            android:id="@+id/buttonln"
            style="@style/CustomButton.SCIENTIFIC"
            android:layout_weight="1"
            android:text="@string/ln"
            android:tag="@string/trigonomic"

            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/RowScientificHiperbolic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonSinusH"
            style="@style/CustomButton.SCIENTIFIC"
            android:layout_weight="1"
            android:hint="@string/sinh"
            android:text="@string/sinh"
            android:tag="@string/trigonomic"
            />


        <Button
            android:id="@+id/buttonCosinusH"
            style="@style/CustomButton.SCIENTIFIC"
            android:layout_weight="1"
            android:text="@string/cosh"
            android:tag="@string/trigonomic"
            />

        <Button
            android:id="@+id/buttonTanH"
            style="@style/CustomButton.SCIENTIFIC"
            android:layout_weight="1"
            android:text="@string/tanh"
            android:tag="@string/trigonomic"
            />



        <Button
            android:id="@+id/buttonlog"
            style="@style/CustomButton.SCIENTIFIC"
            android:layout_weight="1"
            android:text="@string/log"
            android:tag="@string/trigonomic"
            />
    </LinearLayout>




</LinearLayout>